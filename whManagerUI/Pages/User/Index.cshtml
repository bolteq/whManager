@page
@model whManagerUI.Pages.User.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Lista użytkowników</h2>
<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th scope="col">Imie</th>
            <th scope="col">Nazwisko</th>
            <th scope="col">Numer telefonu</th>
            <th scope="col">Email</th>
            <th scope="col">Rola</th>
            <th scope="col">Firma</th>
            <th scope="col" colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null)
        {
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.Role</td>
                    @if (item.Company.Name != null)
                    {
                        <td>@item.Company.Name</td>
                    }
                    <td><a href="/user/delete?id=@item.Id">Usun</a></td>

                </tr>

            }
        }

    </tbody>
</table>

<a href="/company/AddUserSpedytor?id=@Model.CompanyId" class="btn btn-default">Dodaj spedytora</a>
<a href="/company/AddUserDriver?id=@Model.CompanyId" class="btn btn-default">Dodaj kierowce</a>