@page
@model whManagerUI.Pages.DeliveryItemType.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Typy dostaw:</h2>

<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th scope="col">Nazwa</th>
            <th scope="col" colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DeliveryItemTypes != null)
        {
            @foreach (var item in Model.DeliveryItemTypes)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a href="/DeliveryItemType/delete?id=@item.Id">Delete</a></td>
                    <td><a href="/DeliveryItemType/edit?id=@item.Id">Edit</a></td>
                </tr>

            }
        }

    </tbody>
</table>

<form method="post" class="form-inline">
    <div class="form-group">
        <input asp-for="DeliveryItemType.Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form> 