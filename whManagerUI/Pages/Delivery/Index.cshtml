@page
@model whManagerUI.Pages.Delivery.IndexModel
@{
    ViewData["Title"] = "Index";
}

    <div class="container">
        <h2>Lista dostaw:</h2>
        <table class="table table-striped table-bordered table-responsive">
            <thead>
                <tr>
                    <th scope="col">Dostawa z</th>
                    <th scope="col">Firma</th>
                    <th scope="col">Kierowca</th>
                    <th scope="col">Samochod</th>
                    <th scope="col">Ladownosc</th>
                    <th scope="col">Dostarczane przedmioty</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Deliveries != null)
                {
                    @foreach (var item in Model.Deliveries)
                    {
                <tr>
                    <td>@item.DeliveryFrom</td>
                    <td>@item.Company.Name</td>
                    <td>@item.User.Name @item.User.Surname</td>
                    <td>@item.Car.Brand @item.Car.Model (@item.Car.PlateNumber)</td>
                    <td>@item.Car.Capacity</td>
                    <td>
                        @foreach (var deliveryItem in item.DeliveryItems)
                        {
                            @deliveryItem.ItemType.Name@:&nbsp;@deliveryItem.Count
                        }
                    </td>
                </tr>

                    }
                }

            </tbody>
        </table>
        <a href="/Delivery/Create" class="btn btn-default">Dodaj nową</a>
