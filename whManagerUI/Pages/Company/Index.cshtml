@page
@model whManagerUI.Pages.Company.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Lista firm:</h2>

<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col" colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Companies != null)
        {
            @foreach (var item in Model.Companies)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td><a href="/company/AddUserSpedytor?id=@item.Id">Dodaj konto spedytora</a></td>
            <td><a href="/company/edit?id=@item.Id">Edit</a></td>
        </tr>

            }
        }

    </tbody>
</table>

<form method="post" class="form-inline">
    <div class="form-group">
        <input asp-for="Company.Name" class="form-control" />
        <input asp-for="Company.Address" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form> 